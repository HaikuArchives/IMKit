SubDir TOP server ;

SubDirSysHdrs [ FDirName $(TOP) ] ;
SubDirSysHdrs [ FDirName $(TOP) utils DeskbarIcon ] ;

Application im_server :
	im_server.cpp
	im_server_main.cpp
	ContactCachedConnections.cpp
	ContactHandle.cpp
	ContactManager.cpp
	ProtocolManager.cpp
	ProtocolInfo.cpp
	StatusIcon.cpp
	: be $(TARGET_LIBSTDC++) translation textencoding libim.so libcommon.a
	: im_server.rdef ContactStatusIcons.rdef Icons.rdef
;

Depends im_server : libcommon.a ;
Depends im_server : libim.so ;

if $(IMKIT_IS_ZETA) = 1 {
	LINKFLAGS on im_server += -lzeta -ltracker ;
}

LINKFLAGS on im_server += -L$(TOP)/libim -lim ;

InstallBin $(IMKIT_COMMON_SERVERS_DIRECTORY) : im_server ;

if $(IMKIT_IS_ZETA) = 1 {
	SVGIcon im_server : [ FDirName $(TOP) icons imkit im_server.svg ] ;
}

Package imkit :
	im_server :
	[ FSplitPath $(IMKIT_COMMON_SERVERS_DIRECTORY) ]
;
