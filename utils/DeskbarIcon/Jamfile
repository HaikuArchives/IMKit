SubDir IMKIT_TOP utils DeskbarIcon ;

SubDirHdrs [ FDirName $(IMKIT_TOP) ] ;

Addon IMDeskbarIcon :
	DeskbarIcon.cpp
	AwayMessageWindow.cpp
	QueryLooper.cpp
	: be stdc++.r4 libim.so libcommon.a
	: IMDeskbarIcon.rsrc
;

Depends IMDeskbarIcon : libcommon.a ;
Depends IMDeskbarIcon : libim.so ;

if $(IMKIT_IS_ZETA) = 1 {
	LINKFLAGS on IMDeskbarIcon += -lzeta -ltracker ;
}

InstallLib $(IMKIT_APPS_DIRECTORY)/im_kit : IMDeskbarIcon ;
