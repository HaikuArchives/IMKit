SubDir IMKIT_TOP utils IconSetter ;

SubDirSysHdrs [ FDirName $(IMKIT_TOP) ] ;

Application IconSetter :
	main.cpp
	: be translation libim.so
;

Depends IconSetter : libim.so ;

InstallBin $(IMKIT_APPS_DIRECTORY)/im_kit : IconSetter ;
