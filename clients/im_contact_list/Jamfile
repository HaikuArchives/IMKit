SubDir IMKIT_TOP clients im_contact_list ;

SubDirHdrs [ FDirName $(IMKIT_TOP) ] ;

Executable im_contact_list :
	main.cpp
	: be stdc++.r4 libim.so libcommon.a
	: im_contact_list.rdef
;

Depends im_contact_list : libcommon.a ;
Depends im_contact_list : libim.so ;

if $(IMKIT_IS_ZETA) = 1 {
	LINKFLAGS on im_client += -lzeta -ltracker ;
}

InstallBin $(IMKIT_COMMON_BIN_DIRECTORY) : im_contact_list ;

if $(IMKIT_IS_ZETA) = 1 {
	SVGIcon im_contact_list : [ FDirName $(IMKIT_TOP) icons imkit im_contact_list.svg ] ;
}
