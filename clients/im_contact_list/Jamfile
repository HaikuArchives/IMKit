SubDir TOP clients im_contact_list ;

SubDirHdrs [ FDirName $(TOP) ] ;

Application im_contact_list :
	main.cpp
	ContactListApp.cpp
	: be $(TARGET_LIBSTDC++) libim.so libcommon.a
	: im_contact_list.rdef
;

Depends im_contact_list : libcommon.a ;
Depends im_contact_list : libim.so ;

if $(IMKIT_IS_ZETA) = 1 {
	LINKFLAGS on im_client += -lzeta -ltracker ;
}

InstallBin $(IMKIT_COMMON_BIN_DIRECTORY) : im_contact_list ;

if $(IMKIT_IS_ZETA) = 1 {
	SVGIcon im_contact_list : [ FDirName $(TOP) icons imkit im_contact_list.svg ] ;
}

Package imkit :
	im_contact_list :
	[ FSplitPath $(IMKIT_COMMON_BIN_DIRECTORY) ]
;
