SubDir TOP clients im_client ;

SubDirSysHdrs [ FDirName $(TOP) ] ;

Application im_client :
	main.cpp
	ChatApp.cpp
	ChatWindow.cpp
	InputFilter.cpp
	ResizeView.cpp
	Theme.cpp
	Utilities.cpp
	URLCrunch.cpp
	RunView.cpp
	ImageButton.cpp
	StatusBar.cpp
	IconBar.cpp
	: be stdc++.r4 libim.so libcommon.a
	: im_client.rsrc
;

Depends im_client : libcommon.a ;
Depends im_client : libim.so ;

if $(IMKIT_IS_ZETA) = 1 {
	LINKFLAGS on im_client += -lzeta -ltracker ;
}

InstallBin $(IMKIT_COMMON_BIN_DIRECTORY) : im_client ;
InstallSymlink $(IMKIT_COMMON_ADDONS_DIRECTORY)/Tracker/im_client : $(IMKIT_COMMON_BIN_DIRECTORY)/im_client ;

if $(IMKIT_IS_ZETA) = 1 {
	SVGIcon im_client : [ FDirName $(TOP) icons imkit im_client.svg ] ;
}
