SubDir TOP clients tracker_addons merge_contacts ;

AddOn IM_Merge_contacts :
	merge_contacts.cpp
	: be $(TARGET_LIBSTDC++)
	: merge_contacts.rdef
;

InstallBin $(IMKIT_COMMON_ADDONS_DIRECTORY)/Tracker : IM_Merge_contacts ;

Package imkit :
	IM_Merge_contacts :
	[ FSplitPath $(IMKIT_COMMON_ADDONS_DIRECTORY)/Tracker ]
;
