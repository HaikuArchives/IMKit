SubDir TOP clients im_binlog_viewer ;

SubDirHdrs [ FDirName $(TOP) ] ;

SEARCH_SOURCE += [ FDirName $(TOP) clients im_binlog_viewer CLV ] ;

Application im_binlog_viewer :
	# im_binlog_viewer
	LogViewApp.cpp
	LogWin.cpp
	# CLV
	ColorTools.cpp
	ColumnListView.cpp
	ColumnTypes.cpp
	: be $(TARGET_LIBSTDC++) tracker libim.so libcommon.a
	: im_binlog_viewer.rdef
;

Depends im_binlog_viewer : libcommon.a ;
Depends im_binlog_viewer : libim.so ;

if $(IMKIT_IS_ZETA) = 1 {
	LINKFLAGS on im_binlog_viewer += -lzeta -ltracker ;
}

InstallBin $(IMKIT_COMMON_BIN_DIRECTORY) : im_binlog_viewer ;

if $(IMKIT_IS_ZETA) = 1 {
	SVGIcon im_binlog_viewer : [ FDirName $(TOP) icons imkit clients im_binlog_viewer.svg ] ;
}
