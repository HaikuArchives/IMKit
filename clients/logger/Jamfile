SubDir TOP clients logger ;

SubDirHdrs [ FDirName $(TOP) ] ;

Application im_logger :
	logger.cpp
	: be $(TARGET_LIBSTDC++) libim.so
	: im_logger.rdef
;

Depends im_logger : libim.so ;

InstallBin $(COMMON_BIN_DIRECTORY) : im_logger ;

Package imkit :
	im_logger :
	[ FSplitPath $(COMMON_BIN_DIRECTORY) ]
;
