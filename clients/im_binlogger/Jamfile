SubDir TOP clients im_binlogger ;

SubDirHdrs [ FDirName $(TOP) ] ;

Application im_binlogger :
	logger.cpp
	: be tracker libim.so libcommon.a
	: im_binlogger.rdef
;

Depends im_binlogger : libcommon.a ;
Depends im_binlogger : libim.so ;

InstallBin $(IMKIT_COMMON_BIN_DIRECTORY) : im_binlogger ;

if $(IMKIT_IS_ZETA) = 1 {
	SVGIcon im_binlogger : [ FDirName $(TOP) icons imkit clients im_binlogger.svg ] ;
}

Package imkit :
	im_binlogger :
	[ FSplitPath $(IMKIT_COMMON_BIN_DIRECTORY) ]
;
