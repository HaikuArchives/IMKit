SubDir IMKIT_TOP clients im_infopopper ;

SubDirHdrs [ FDirName $(IMKIT_TOP) ] ;

Application im_infopopper :
	main.cpp
	IMInfoApp.cpp
	: be stdc++.r4 libim.so libcommon.a infopopper
	: im_infopopper.rdef
;

Depends im_infopopper : libcommon.a ;
Depends im_infopopper : libim.so ;

LINKFLAGS on im_infopopper += -L$(IMKIT_COMMON_LIB_DIRECTORY) ;

InstallBin $(IMKIT_COMMON_BIN_DIRECTORY) : im_infopopper ;
