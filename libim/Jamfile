SubDir TOP libim ;

SharedLibrary libim.so :
	Connection.cpp
	Contact.cpp
	Manager.cpp
	Helpers.cpp
	Protocol.cpp
	: be $(TARGET_LIBSTDC++)
	: libim_version.rdef
;

if $(IMKIT_IS_ZETA) = 1 {
	LINKFLAGS on libim.so += -lzeta ;
}

InstallLib $(IMKIT_COMMON_LIB_DIRECTORY) : libim.so ;
InstallFile $(IMKIT_COMMON_INC_DIRECTORY)/libim : Constants.h ;
InstallFile $(IMKIT_COMMON_INC_DIRECTORY)/libim : Contact.h ;
InstallFile $(IMKIT_COMMON_INC_DIRECTORY)/libim : Helpers.h ;
InstallFile $(IMKIT_COMMON_INC_DIRECTORY)/libim : Manager.h ;
InstallFile $(IMKIT_COMMON_INC_DIRECTORY)/libim : Protocol.h ;
