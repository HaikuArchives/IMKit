SubDir TOP common ;

SubDirSysHdrs [ FDirName $(TOP) common ] ;

if $(PLATFORM) = Haiku {
	SEARCH_SOURCE += [ FDirName $(TOP) common haiku_clv ] ;
} else {
	SEARCH_SOURCE += [ FDirName $(TOP) common clv ] ;
}
C++FLAGS += -fpermissive ;

StaticLibrary libcommon.a :
	Base64.cpp
	BufferWriter.cpp
	BufferReader.cpp
	BubbleHelper.cpp
	IMKitUtilities.cpp
	IconMenuItem.cpp
	IconTextItem.cpp
	IconView.cpp
	MultiLineStringView.cpp
	NotifyingTextView.cpp
	Divider.cpp
	SettingsFile.cpp
	htmlparse.cpp

	# CLV
	ColorTools.cpp
	ColumnListView.cpp
	ColumnTypes.cpp
;

if $(IMKIT_IS_ZETA) = 1 {
	LINKFLAGS on libcommon.a += -lzeta -ltracker ;
}
