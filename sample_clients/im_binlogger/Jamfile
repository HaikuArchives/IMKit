SubDir IMKIT_TOP sample_clients im_binlogger ;

SubDirHdrs [ FDirName $(IMKIT_TOP) ] ;

Executable im_binlogger :
	logger.cpp
	: be tracker libim.so libcommon.a
	: logger.rsrc
;

Depends im_binlogger : libcommon.a ;
Depends im_binlogger : libim.so ;

InstallBin $(IMKIT_COMMON_BIN_DIRECTORY) : im_binlogger ;
