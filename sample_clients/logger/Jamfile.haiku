SubDir HAIKU_TOP 3rdparty IMKit sample_clients logger ;

SubDirC++Flags $(IMKIT_DEFINES) ;

SubDirSysHdrs [ FDirName $(IMKIT_TOP) ] ;

Application im_logger :
	logger.cpp
	: be libim.so
	: logger.rsrc
;

Depends im_logger : libim.so ;

AddFilesToHaikuImage common bin : im_logger ;

Package imkit-cvs :
	im_logger :
	boot common bin
;
